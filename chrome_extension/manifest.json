{
	"name": "GGExtraEmotes",
	"description": "Добавляет более 50 эмодзи для goodgame.ru",
	"version": "1.0.0",
	"manifest_version": 3,
	"permissions":
	[
		"webRequest"
	],
	"externally_connectable":
	{
    	"matches": ["<all_urls>"]
	},
	"content_scripts":
	[
		{
			"matches": ["*://goodgame.ru/channel/*"],
			"js": ["js/inject.js"],
			"css": ["css/inner.css"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources":
	[
		{
			"matches": ["<all_urls>"],
			"resources":
			[
				"js/injected.js"
			]
		}
	],
	"icons":
	{
		"64": "img/icon_64x64.png",
		"32": "img/icon_32x32.png"
	},
	"action":
	{
		"default_title": "Добавляет более 50 эмодзи для goodgame.ru",
		"default_icon": "img/icon_32x32.png"
	}
}
